                  <div class="form-group">
                    <label for="transacoes">
                      <small>Valor Transações:</small>
                    </label>
                    <input id="transacoes" class="form-control" readonly placeholder="R$ 100,00">
                </div>
              </div> 
              
              <div class="col-xs-7 col-md-4 text-left">
                Últimas transações
              </div>

              <div class="col-xs-5 col-md-8 text-right">
                <i class="fa fa-exchange"></i>
              </div>
              
              <div class="col-xs-12 col-md-12 top-space"></div> 
              
              <transactions />
              <a href="/solicitar-pagamento" class="btn btn-default">Gerar Novo Pagamento</a>          
            </div>
            </form>
        </div><br><br><br>
        </div>
