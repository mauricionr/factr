  <@content>
    <div id="step1" class="text-center">
      <div class="container">
        <div class="col-md-12 col-md-offset-2 text-left">
          <p>
            <small>Bem vindo, </small> <username />
          </p>
          <p>Abaixo está o resumo da sua conta:</p>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <form name="transaction" id="transaction" novalidate>
              <div class="row">
                <div class="col-xs-4 col-md-4">
                  <div class="form-group">
                    <label for="valor"><small>Saldo:</small></label><input id="valor" class="form-control" readonly placeholder="R$ 150,00">
